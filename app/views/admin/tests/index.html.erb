<h1><%= t('tests.index.header') %></h1>
<table class="table mt-4">
  <thead>
     <th class="sort-by-title pointer">
      <%= t('tests.index.title') %>
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
    <th><%= t('tests.index.level') %></th>
    <th><%= t('tests.index.category') %></th>
    <th><%= t('tests.index.questions') %></th>
    <th colspan='3'><%= t('.actions') %></th>
  </thead>

  <tbody>
    <%= render @tests %>
  </tbody>
</table>

<div class="mt-4">
	<%= link_to t('.new'), new_admin_test_path, class: "btn btn-primary text-light" %>
</div>