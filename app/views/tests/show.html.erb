<h1>Тест: <%= @test.title %></h1>
<div class="links">
  <%= link_to 'Back', tests_path %>
  <%= link_to 'Edit', edit_test_path(@test) %>
  <%= link_to 'Delete', test_path(@test), method: :delete %>
</div>
<p>category: <%= @test.category.title %></p>
<p>level: <%= @test.level %></p>
<h2>Questions to test</h2>
<%= link_to '+ Add Questions', new_test_question_path(@test) %>
<table>
  <thead>
    <th>Texts of question</th>
    <th colspan="3">Action</th>
  </thead>
  <tbody>
      <%= render @test.questions %>
  </tbody>
</table>